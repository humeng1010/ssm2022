<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--    配置对应的bean-->
    <!--  dao  -->
    <!--  bean中的属性：
            id：当前bean的唯一标识
            class：要实现的bean对应的类路径
            name：当前bean的别名(不过还是建议用id引用)
    -->
    <bean id="bookDao" class="com.meng.dao.impl.BookDaoImpl" name="dao" scope="prototype"/>
    <!--  service  -->
    <bean id="bookService" class="com.meng.service.impl.BookServiceImpl" name="service,sss">
        <!--    配置service与dao的关系    -->
        <!--    property标签表示配置当前bean的属性-->
        <!--    name属性表示配置哪一个具体的属性    -->
        <!--    ref属性表示参照哪一个bean    -->
        <property name="bookDao" ref="bookDao"/>
    </bean>
</beans>